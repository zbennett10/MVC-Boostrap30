@model BootstrappingMVC.Models.Person


@{
    ViewBag.Title = "Index";
    var likesMusic = Model.LikesMusic ? "active" : null;
    var notAMusicFan = !Model.LikesMusic ? "active" : null;
}

<div class="jumbotron">
    <h1>ASP.NET MVC Website</h1>
</div>

<div>
    <h3>@Model.FirstName @Model.LastName</h3>
    <p>@Model.FirstName was born on @Model.BirthDate.ToString("D")</p>
    <p>
        Likes Music: @Html.DisplayFor(model => model.LikesMusic)</p>
     
    </p>
</div>

@{ 
    ViewBag.ListDescription = "Skills:";
    Html.RenderPartial("_Skills", Model.Skills);
}

<p>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
